<h1><%= @product[:name] %></h1>
<%= link_to 'Product Index', root_path %> | <%= link_to 'Edit', edit_product_path(@product) %><br>
<p>
	Price: <%= @product.formatted_price %><br>
	Description: <%= @product[:description] %>
</p>

<% if current_user %>
	<h3>Reviews</h3>
	<p>Reviews for <%= @product[:name] %></p>

	<% @product.reviews.each do |review| %>
		<p>
			<%= review.comment %>
			<br>
			<% if review.user != nil %>
				<em> by <%= review.user.email %></em>
				Added On: <%= review.created_at %>
			<% end %>
		</p>
	<% end %>

	<h4>New Review</h4>
	<%= render 'reviews/form', object: [@product, @review] %>
<% else %>
 <p>Please <%= link_to 'Log In', new_session_path %> to add a review.</p>
<% end %>

