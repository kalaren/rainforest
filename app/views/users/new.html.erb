<h1>Sign Up</h1>
<%= render 'shared/errors', object: @user %>
<%= form_for @user do |f| %>
	<div class="field">
		<%= f.text_field :name, placeholder: "Name" %>
	</div>
	<div class="field">
		<%= f.text_field :email, placeholder: "Email" %>
	</div>
	<div class="field">
		<%= f.text_field :password, placeholder: "Password" %>
	</div>
	<div class="field">
		<%= f.text_field :password_confirmation, placeholder: "Re-type Password" %>
	</div>
	<div class="actions">
		<%= f.submit %>
	</div>
<% end %>
