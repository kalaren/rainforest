<!DOCTYPE html>
<html ng-app>
<head>
  <title>Rainforest</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.0.7/angular.min.js"></script>

</head>
<body>
	<% if flash[:notice] %>
		<p id="notice"><%= flash[:notice] %></p>
	<% end %>
	<% if flash[:alert] %>
		<p id="alert"><%= flash[:alert] %></p>
	<% end %>

	<%= yield %>

	<p class="userinfo">
		<% if signed_in? %>
			<%= link_to 'Product Index', root_path %> | Signed in as <%= current_user.name %> | <%= link_to 'Profile', user_path(current_user) %> | <%= link_to 'Edit Profile', edit_user_path(current_user) %> | <%= link_to 'Log Out', session_path('current'), method: :delete %>
		<% else %>
			<%= link_to 'Log In', new_session_path %> | <%= link_to 'Sign Up', new_user_path %>
		<% end %>
	</p>
</body>
</html>
